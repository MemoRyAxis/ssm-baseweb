<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <!-- MyBatis data source configuration -->
    <bean id="baseSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="baseDataSource"/>
        <property name="configLocation" value="classpath:mybatis-config.xml"/>
        <property name="mapperLocations">
            <list>
                <value>classpath:/com/memory/user/mapper/*Mapper.xml</value>
            </list>
        </property>
    </bean>

    <!-- MyBatis mapper interface -->
    <bean id="baseJdbcTemplate" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.memory.user.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="baseSessionFactory"/>
    </bean>
</beans>